Vagrant.configure("2") do |config|

    # Linux OS CentOS
    config.vm.box = "geerlingguy/centos7"

    config.vm.network "public_network"
  
    # Web server
    config.vm.define "nexus" do |nexus|
      nexus.vm.hostname = "nexus"
      # static ip address
      nexus.vm.network :private_network, ip: "192.168.60.14"
      nexus.vm.network :forwarded_port, guest: 8081, host: 3000
    end
      
    # Application server
    config.vm.define "jenkins" do |jenkins|
      jenkins.vm.hostname = "jenkins"
      # static ip address
      jenkins.vm.network :private_network, ip: "192.168.60.15"
      jenkins.vm.network :forwarded_port, guest: 8080, host: 3001

    end
    config.vm.define "slave" do |slave|
      slave.vm.hostname = "slave"
      # static ip address
      slave.vm.network :private_network, ip: "192.168.60.16"
    end  

end
